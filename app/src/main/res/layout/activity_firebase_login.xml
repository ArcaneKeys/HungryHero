<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirebaseLoginActivity">

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Pole tekstowe dla adresu e-mail -->
        <EditText
            android:id="@+id/loginEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adres e-mail" />

        <!-- Pole tekstowe dla hasła -->
        <EditText
            android:id="@+id/loginPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hasło"
            android:inputType="textPassword" />

        <!-- Przycisk logowania -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zaloguj się"
            android:onClick="login" />

        <TextView
            android:id="@+id/switchToRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nie masz konta? Zarejestruj się"
            android:clickable="true"
            android:onClick="switchToRegistration" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/registrationLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- Pole tekstowe dla adresu e-mail -->
        <EditText
            android:id="@+id/registerEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adres e-mail" />

        <!-- Pole tekstowe dla hasła -->
        <EditText
            android:id="@+id/registerPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hasło"
            android:inputType="textPassword" />

        <!-- Informacje o wymaganiach hasła -->
        <TextView
            android:id="@+id/passwordRequirementsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Wymagania hasła: minimum 6 znaków, co najmniej jedna duża litera i cyfra"
            android:textColor="#999999"
            android:textSize="12sp" />

        <!-- Pole tekstowe dla powtórzenia hasła -->
        <EditText
            android:id="@+id/repeatRegisterPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Potwierdź hasło"
            android:inputType="textPassword" />

        <!-- Przycisk rejestracji -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zarejestruj się"
            android:onClick="register" />

        <TextView
            android:id="@+id/switchToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masz już konto? Zaloguj się"
            android:clickable="true"
            android:onClick="switchToLogin" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>